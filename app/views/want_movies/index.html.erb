<center><h2><%= @user.username%> Wants to Watch: </h2></center>
<div class="watched_wrapper">
<div class="watched_movies"><h3>Movies</h3>
<% sorted = @want_movie.all.order(:title) %>
<% sorted.each do |m| %>
<a href="/want_movies/<%=m.id%>"><%= m.title %></a><br>
<%= m.overview %>
<%= form_for :watched, url:{action: 'watch_movie', controller: 'want_movies'} do |f| %>
<%= hidden_field_tag "title", m.title %>
<%= hidden_field_tag "tmdb_id", m.tmdb_id %>
<%= hidden_field_tag "overview", m.overview %>
<%= hidden_field_tag "poster", m.poster%>
<%= f.text_field :notes, :placeholder=> "notes" %>
<%= f.submit "mark as watched"%>
<% end %>
<hr>
<% end %></div>

<div class="watched_shows"><h3>TV Series</h3>
<% sorted_shows = @want_show.all.order(:title) %>
<% sorted_shows.each do |s| %>
<a href="/want_shows/<%=s.id%>"><%= s.title %></a><br>
<%= s.overview%>
<%= form_for :watched_show, url:{action: 'watch_show', controller: 'want_shows'} do |f|%>
<%= hidden_field_tag "title", s.title%>
<%= hidden_field_tag "tmdb_id", s.tmdb_id%>
<%= hidden_field_tag "overview", s.overview%>
<%= hidden_field_tag "poster", s.poster%>
<%= f.text_field :notes, :placeholder=> "notes" %>
<%= f.submit "mark as watched"%>
<% end%>
<hr>
<% end %></div>
</div>